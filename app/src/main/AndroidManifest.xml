<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.scheduler">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Scheduler">
        <receiver
            android:name=".util.DailyUpdateReceiver"
            android:enabled="true"
            android:exported="false" />
        <receiver
            android:name=".util.AlarmReceiver"
            android:enabled="true"
            android:exported="false" />
        <activity android:name="com.example.scheduler.intro.SchedulerIntro"
            android:label="My Custom AppIntro"
            android:theme = "@style/Theme.AppCompat.NoActionBar"/>
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.Scheduler.NoActionBar"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>